<Window x:Class="CanvasTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasTest"
        xmlns:controls="clr-namespace:CanvasTest.Controls"
        xmlns:converters="clr-namespace:CanvasTest.Converters"
        KeyDown="MainWindow_KeyDown"
        MouseMove="MainWindow_MouseMove"
        mc:Ignorable="d"
        Title="Visual Excel Canvas" Height="800" Width="1000">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <!-- Grid Background Brush -->
        <VisualBrush x:Key="GridBrushMinor"
                     TileMode="Tile"
                     Viewport="0 0 10 10" ViewportUnits="Absolute"
                     Viewbox="0 0 20 20" ViewboxUnits="Absolute">

            <VisualBrush.Visual>
                <Grid Background ="Transparent">
                    <Rectangle Stroke="LightGray" StrokeThickness="0.1"
                             Width="20" Height="20"></Rectangle>
                </Grid>
            </VisualBrush.Visual>
        </VisualBrush>
        <VisualBrush x:Key="GridBrushMajor"
                     TileMode="Tile"
                     Viewport="0 0 50 50" ViewportUnits="Absolute"
                     Viewbox="0 0 20 20" ViewboxUnits="Absolute">

            <VisualBrush.Visual>
                <Grid Background ="Transparent">
                    <Rectangle Stroke="Gainsboro" StrokeThickness="0.1"
                             Width="20" Height="20"></Rectangle>
                </Grid>
            </VisualBrush.Visual>
        </VisualBrush>

    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Index 0 For menubar-->
            <RowDefinition Height="*"/>
            <!-- Index 1 for USerspace-->
            <RowDefinition Height="Auto"/>
            <!-- Index 2 for statusbar-->
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File" Padding="10 0 10 0">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_View" Padding="10 0 10 0">
                <MenuItem Header="Debug Window" Click="DebugWindow_MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- U S E R S P A C E -->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- T O O L B O X -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!--Title-->
                    <RowDefinition Height="Auto"/>
                    <!--SearchBox-->
                    <RowDefinition Height="*"/>
                    <!--Function List-->
                </Grid.RowDefinitions>
                <!--Title-->
                <TextBlock Grid.Row="0" 
                           Text="Function List"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin=" 10 10 10 5"/>
                <!-- Search Box -->
                <Border Grid.Row="1" 
                        Margin="10,5,10,10"
                        Background="White"
                        BorderBrush="#E1E5E9"
                        BorderThickness="1"
                        CornerRadius="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <Path Grid.Column="0" 
                              Margin="10,0,5,0"
                              Width="14" Height="14"
                              Fill="#718096"
                              Stretch="Uniform"
                              Data="M21,21 L15,15 M17,10 A7,7 0 1,1 3,10 A7,7 0 1,1 17,10"/>

                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1"
                                 x:Name="SearchTextBox"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 FontSize="13"
                                 Foreground="#2D3748"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                            <!--TextChanged="SearchTextBox_TextChanged">-->
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                    <TextBlock Text="Search functions..." 
                                                               Foreground="#A0AEC0"
                                                               Margin="2,0,0,0"
                                                               VerticalAlignment="Center"
                                                               IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Clear Button -->
                        <Button Grid.Column="2"
                                x:Name="ClearSearchButton"
                                Command="{Binding ClearSearchCommand}"
                                Content="✕"
                                FontSize="12"
                                Foreground="#718096"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="5,0"
                                Cursor="Hand"
                                Visibility="{Binding IsClearButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <!--Click="ClearSearchButton_Click"/>-->
                    </Grid>
                </Border>

                <!--Function List-->
                <ListBox Grid.Row="2"
         ItemsSource="{Binding FilteredFunctions}"
         x:Name="FunctionListBox"
         PreviewMouseLeftButtonDown="FunctionListBox_PreviewMouseLeftButtonDown"
         Background="#F8F9FA"
         BorderThickness="0"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         Panel.ZIndex="1"
         Padding="0 0 5 0">


                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    CornerRadius="8" 
                                    Margin="8,4"
                                    Padding="12,8"
                                    BorderThickness="1"
                                    BorderBrush="Green">
                                <!-- SAME drop shadow as nodes -->
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                      Opacity="0.08" 
                                                      ShadowDepth="2" 
                                                      BlurRadius="8"
                                                      Direction="270"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- EXACT SAME icon styling as nodes -->
                                    <Border Grid.Column="0"
                                            Background="#E8F5E8"
                                            CornerRadius="6"
                                            Width="32" Height="32"
                                            Margin="0,0,12,0">
                                        <Path Fill="#217346" 
                                              Data="{Binding IconPath}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Stretch="Uniform"
                                              Width="14" Height="14"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <!-- SAME typography as nodes -->
                                        <TextBlock Text="{Binding Name}" 
                                                   FontFamily="Segoe UI"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2D3748"
                                                   Margin="0,0,0,2"/>

                                        <TextBlock Text="{Binding Description}" 
                                                   FontFamily="Segoe UI"
                                                   FontSize="11"
                                                   Foreground="#718096"
                                                   TextWrapping="Wrap"/>

                                        <!-- Category Tag -->
                                        <Border Background="#F0F8FF"
                                                CornerRadius="10"
                                                Padding="6,2"
                                                HorizontalAlignment="Left"
                                                Margin="0,4,0,0">
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="9"
                                                       FontWeight="Medium"
                                                       Foreground="#2B579A"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- HARMONIZED hover effect -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2B579A"/>
                                            </Trigger>
                                            <!-- HARMONIZED selection effect -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#EBF8FF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
            <!-- C A N V A S A R E A -->
            <Grid Grid.Column="1" ClipToBounds="True">
                <Rectangle Fill="{StaticResource GridBrushMinor}"/>
                <Rectangle Fill="{StaticResource GridBrushMajor}"/>

                <Canvas 
                                x:Name="NodeCanvas" 
                                Background="Transparent"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                MouseLeftButtonDown="NodeCanvas_LeftButtonDown" 
                                AllowDrop="True"
                                Drop="NodeCanvas_Drop"
                                DragEnter="NodeCanvas_DragEnter">

                    <ItemsControl ItemsSource="{Binding Nodes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:Node 
                                        FunctionName="{Binding FunctionName}"
                                        NodeValue="{Binding NodeValue}"
                                        IconPath="{Binding IconPath}"
                                        IsSelected="{Binding IsSelected, Mode=TwoWay}"
                                        MouseLeftButtonDown="Node_LeftButtonDown"
                                        MouseMove="Node_MouseMove"
                                        MouseLeftButtonUp="Node_LeftButtonUp"
                    />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Canvas>
            </Grid>
            <!-- Debug and Properties Panel-->
            <Expander Header="Properties" Grid.Column="2" Name="PropertiesPanel"
          HorizontalAlignment="Right"
          ExpandDirection="Left" IsExpanded="True"
          DataContext="{Binding SelectedNode}">
                <Grid Margin="10" MinWidth="250">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <TextBlock Text="GUID:" FontWeight="Bold" Margin="0,0,10,5" Grid.Row="0" Grid.Column="0"/>
                    <TextBox Text="{Binding Id, Mode=OneWay}" IsReadOnly="True" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Function:" FontWeight="Bold" Margin="0,0,10,5" Grid.Row="1" Grid.Column="0"/>
                    <TextBox Text="{Binding FunctionName, Mode=OneWay}" IsReadOnly="True" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Position X:" FontWeight="Bold" Margin="0,0,10,5" Grid.Row="2" Grid.Column="0"/>
                    <TextBox Text="{Binding X, StringFormat={}{0:F0}}" IsReadOnly="True" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Position Y:" FontWeight="Bold" Margin="0,0,10,5" Grid.Row="3" Grid.Column="0"/>
                    <TextBox Text="{Binding Y, StringFormat={}{0:F0}}" IsReadOnly="True" Grid.Row="3" Grid.Column="1"/>

                </Grid>
            </Expander>
        </Grid>

        <!--S T A T U S B A R-->
        <StatusBar Grid.Row="2">
            <StatusBarItem Content="Ready"/>
            <Separator/>
            <TextBlock x:Name="CoordinatesText"/>
            <Separator/>
            <TextBlock x:Name="MouseStatus"/>
            <Separator/>
            <TextBlock x:Name="ZoomStatusText" Text="Zoom: 100%"/>
            <Separator/>
            <TextBlock x:Name="HoveredElement"/>
        </StatusBar>
    </Grid>
</Window>